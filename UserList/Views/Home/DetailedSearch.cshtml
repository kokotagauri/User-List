@model List<UserList.Dtos.Location.GetCityDto>
<!DOCTYPE html>

@{
    ViewData["Title"] = "Detailed Search";
}


<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detailed Search</title>
</head>
<body>

    <h4>Detailed Search</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="DetailedRedirect">
                <div class="form-group">
                    <label class="control-label">First Name</label>
                    <input name="FirstName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Last Name</label>
                    <input name="LastName" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Gender</label>
                    <input name="Gender" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Identity</label>
                    <input name="Identity" class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">Birth Date</label>
                    <input name="BirthDate" class="form-control" type="date" />
                </div>
                <div class="form-group">
                    <select name="City" class="form-control">
                        <option value="0">Select City</option>
                        @{
                            foreach (var m in Model)
                            {
                                <option value="@m.Id">@m.Name</option>
                            }
                        }
                    </select>
                </div>

                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</body>
</html>
